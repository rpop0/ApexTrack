<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="ToolTip" x:Key="SettingsTooltipStyle">
        <Setter Property="Foreground" Value="White" />
        <Setter Property="FontSize" Value="11" />
        <Setter Property="FontFamily" Value="{StaticResource Poppins-SemiBold}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ToolTip">
                    <Border Margin="10 5" Padding="10 2" CornerRadius="10" Background="#682FF7">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <ToolTip x:Key="SettingsTooltip" Placement="Bottom" HorizontalOffset="25" Style="{StaticResource SettingsTooltipStyle}">Setări</ToolTip>
</ResourceDictionary>